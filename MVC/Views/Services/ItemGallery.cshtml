@using DCCMSNameSpace;



@{
    List<ItemsFilesEntity> ItemsList = null;
    AppService.FrontItemsModel CurrentItem = (AppService.FrontItemsModel)ViewData["CurrentItem"];

    if (CurrentItem != null)
    {
        ItemsList = ItemsFilesFactory.GetAll(CurrentItem.ItemID, ItemFileTypes.Photo);
    }
    int index = 0;
}


@if (ItemsList != null && ItemsList.Count>0)
{ 
    
    
<section class="grayarea recent-projects-home topspace30 animated fadeInUpNow notransition">
    <div class="container">
        <div class="row">
            <div class="text-center smalltitle">
            </div>
            <div class="col-md-12">
                <div class="list_carousel text-center">
                    <div class="carousel_nav">
                        <a class="prev" id="car_prev" href="#"><span>prev</span></a>
                        <a class="next" id="car_next" href="#"><span>next</span></a>
                    </div>
                    <div class="clearfix">
                    </div>
                    <ul id="carousel-projects">
                        @foreach (ItemsFilesEntity item in ItemsList)
                        {
                            <li>
                                <div class="boxcontainer">
                                    <img src="@(DCCMSNameSpace.SiteSettings.Site_AdminUrl + item.PhotoOiginalPath)" alt="">
                                    <div class="roll">
                                        <div class="wrapcaption">
                                            <a href="/Offers/page/@item.ItemID"><i class="icon-link captionicons"></i></a>
                                            <a data-gal="prettyPhoto[gallery1]" href="@(DCCMSNameSpace.SiteSettings.Site_AdminUrl + item.PhotoOiginalPath)" title=""><i class="icon-zoom-in captionicons"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
